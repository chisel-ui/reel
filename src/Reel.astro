---
import { getSafeGutter } from '@chisel-ui/core'
import './Reel.css'
import type { LayoutProps } from '@chisel-ui/core'

export interface ColumnsProps extends LayoutProps {
    snapType?: 'none' | 'proximity' | 'mandatory'
}

const { gutter = '0px', theme = {}, as: Tag = 'div', snapType = 'none', style = '', ...props } = Astro.props as ColumnsProps

const maybeGutter = getSafeGutter(theme, gutter)
---

<Tag data-chisel-columns={snapType} style={`--gutter: ${maybeGutter};${style}`} {...props}>
    <slot />
</Tag>
